# Polygon API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# AWS S3 Configuration for Massive.com Flat Files
# Get these from: https://massive.com/dashboard
AWS_ACCESS_KEY_ID=your_massive_access_key_id
AWS_SECRET_ACCESS_KEY=your_massive_secret_key
AWS_REGION=us-east-1

# Massive.com S3 Configuration
MASSIVE_S3_ENDPOINT=https://files.massive.com
MASSIVE_S3_BUCKET=flatfiles

# Flask Server Configuration
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
# IMPORTANT: Generate a secure random string for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secure-random-secret-key-here

# CORS Configuration (comma-separated list of allowed origins)
# Update with your actual domain
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration
JWT_EXPIRATION_HOURS=24
